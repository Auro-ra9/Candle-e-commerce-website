<%-include('navbar') %>

    <div class="container pt-5 cart-container">
        <div class="row">
            <div class="col-xl-8">

                <% if(productInWishlist.length!=0){ %>
                    <% productInWishlist.items.forEach((product,index)=>{ %>


                        <div class="card border shadow-none">
                            <div class="card-body">

                                <div class="d-flex align-items-start border-bottom pb-3">
                                    <div class="me-4">
                                        <a href="/product-view/<%= product.productID.id %>">
                                            <img src="../../<%= product.productID.image[0] %>" alt=""
                                                class="avatar-lg rounded"></a>
                                    </div>
                                    <div class="flex-grow-1 align-self-center overflow-hidden">
                                        <div>
                                            <h5 class="text-truncate font-size-18"><a
                                                    href="/product-view/<%= product.productID.id %>" class="text-dark">
                                                    <%= product.productID.productName %>
                                                </a></h5>
                                            <p class="text-muted mb-0">
                                                <i class="bx bxs-star text-warning"></i>
                                                <i class="bx bxs-star text-warning"></i>
                                                <i class="bx bxs-star text-warning"></i>
                                                <i class="bx bxs-star text-warning"></i>
                                                <i class="bx bxs-star-half text-warning"></i>
                                            </p>
                                            <p class="mb-0 mt-1">Brand : <span class="fw-medium">
                                                    <%= product.productID.brand %>
                                                </span></p>
                                            <% if(product.productID.productQuantity<10){%>
                                                <p class="mb-0 mt-1"><b class="fw-medium text-danger">
                                                        only <%= product.productID.productQuantity %> stock left
                                                    </b></p>
                                                <% } %>
                                        </div>
                                    </div>
                                    <div class="flex-shrink-0 ms-2">
                                        <ul class="list-inline mb-0 font-size-16">
                                            <li class="list-inline-item">
                                                <i class="mdi mdi-trash-can-outline"
                                                    onclick="deleteWishlist('<%= product.productID._id %>')"></i>
                                            </li>
                                            <li class="list-inline-item">
                                                <i class="fa-solid fa-cart-plus"
                                                    onclick="addToCart('<%= product.productID._id %>')"></i>
                                            </li>
                                            <!-- <li class="list-inline-item">
                                                <i class="mdi mdi-heart-outline"></i>
                                            </li> -->
                                        </ul>
                                    </div>
                                </div>

                                <div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="mt-3">
                                                <p class="text-muted mb-2">Price</p>
                                                <h5 class="mb-0 mt-2"><span class="text-muted me-2"><del
                                                            class="font-size-16 fw-normal">&#8377; <%=
                                                                product.productID.productPrice %></del></span>
                                                    &#8377;
                                                    <%=(product.productID.productPrice*(1-product.productID.discount
                                                        /100)).toLocaleString() %>
                                                </h5>
                                            </div>
                                        </div>

                                        <!-- <div class="col-md-3">
                                            <div class="mt-3">
                                                <p class="text-muted mb-2 total-count-box  ">Total</p>
                                                <h5 class="product-total-box">&#8377;<%=
                                                        (product.productID.productPrice*(1-product.productID.discount/100)*(product.productCount)).toLocaleString()
                                                        %>
                                                </h5>
                                            </div>
                                        </div> -->
                                    </div>
                                </div>

                            </div>
                        </div>

                        <% }) %>
                            <% }else{ %>
                                <div class="empty-cart"><a href="/home" class="btn btn-link text-muted">
                                        No products haven't been added to wishlist yet</div></a>
                                <% } %>

                                    <!-- end card -->


                                    <div class="row my-4">
                                        <div class="col-sm-6">
                                            <a href="/home" class="btn btn-link text-muted">
                                                <i class="mdi mdi-arrow-left me-1">
                                                </i> Explore our products and wishlist your favourite product </a>
                                        </div> <!-- end col -->
                                    </div> <!-- end row-->
            </div>

            <!-- total summary of the order were here, if it is necessary in the future we can add -->

        </div>
        <!-- end row -->
        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <% for(let i=1; i <=totalPages; i++) { %>
                    <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                        <a class="page-link" href="/home?page=<%= i %>&<%= new URLSearchParams(query).toString() %>">
                            <%= i %>
                        </a>
                    </li>
                    <% } %>
            </ul>
        </nav>

    </div>


    <%- include('footer') %>


        <script>
            // Function to remove a product from the wishlist
            function deleteWishlist(productID, index) {
                const URL = `/delete-wishlist-item/${productID}`

                fetch(URL, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                }).then((res) => {
                    if (res.ok) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Product removed from wishlist',
                            showConfirmButton: false,
                            timer: 900
                        }).then(() => {
                            window.location.reload()
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Failed to remove product',
                            text: 'Please try again later',
                        });
                    }
                }).catch((err) => {
                    console.log('Error removing product from wishlist', err)
                });
            }


            //add to cart button

            function addToCart(productID) {
                console.log(productID);

                const URL = `/addToCart/${productID}`
                fetch(URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                }).then((res) => {
                    return res.json()
                }).then((data) => {
                    if (data.existInCart) {
                        iziToast.warning({
                            message: 'Product alreday in cart'
                        });
                    }
                    if (data.success) {
                        iziToast.success({
                            message: 'Added'
                        })
                    }
                }).catch((err) => {
                    window.location.href = '/login'
                    console.log(`error while adding to cart${err}`)

                })
            }


        </script>