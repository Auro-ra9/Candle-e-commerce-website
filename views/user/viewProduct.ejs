              id="product-image-img" />
          </div>
          <div class="d-flex justify-content-center mb-3">
            <% productDetail.image.forEach((img)=>{ %>
              <img width="60" height="60" class="rounded-2" src="../../<%=img %>"
              onclick="changeImage(`<%= img.replace(/\\/g,'\\\\') %>`)" />
