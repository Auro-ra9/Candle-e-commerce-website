<style>
    .navbar-light {
        background: #C3BAA9;
    }

    .navbar-light .navbar-nav .nav-link {
        color: #000;
    }

    .navbar-brand img {
        height: 50px;
    }

    .navbar-toggler {
        border: none;
    }

    .navbar-toggler:focus {
        outline: none;
    }

    .search-bar {
        display: flex;
        align-items: center;
        background-color: #ffffff;
        border-radius: 5px;
        padding: 5px 10px;
        width: 400px;
    }

    .search-bar input {
        border: none;
        outline: none;
        width: 100%;
        padding: 5px;
    }

    .search-bar i {
        color: #888;
        margin-right: 10px;
    }

    @media (max-width: 768px) {
        .navbar-brand img {
            height: 40px;
        }

        .nav-item {
            text-align: center;
            margin-bottom: 10px;
        }

        .search-bar {
            margin-top: 10px;
            width: 100%;
        }
    }
</style>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light py-3">
    <div class="container">
        <a class="navbar-brand" href="/home">
            <img id="MDB-logo" src="../../images/AURA.jpg" draggable="false" class="rounded" />
        </a>
        <button class="navbar-toggler" type="button" data-mdb-toggle="collapse"
            data-mdb-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <form class="d-flex search-bar">
                <input type="search" placeholder="What are you looking for?" aria-label="Search">
                <button type="submit" class="btn p-0"><i class="fas fa-search"></i></button>
            </form>
            <ul class="navbar-nav ms-auto align-items-center">
                <li class="nav-item">
                    <a class="nav-link mx-2" href="/home">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link mx-2" href="#!">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link mx-2" href="#!">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link mx-2" href="#!">
                        <i class="fa-regular fa-heart"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link mx-2" href="/cart">
                        <i class="fa-solid fa-bag-shopping"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link mx-2" href="/profile">
                        <i class="fa-regular fa-user"></i> </a>
                </li>
                <% if(user) { %>
                    <li class="nav-item ms-3">
                        <a class="btn btn-black btn-rounded" href="/logout"><i class="fa-solid fa-power-off"></i></a>
                    </li>
                    <% } else { %>
                        <li class="nav-item ms-3">
                            <a class="btn btn-black btn-rounded" href="/login"><i class="fa-solid fa-right-to-bracket"
                                    style="color: #111212;"></i></a>
                        </li>
                        <% } %>
            </ul>
        </div>
    </div>
</nav>
<!-- Navbar -->

<%- include('alert') %>