    background-color: #e9ecef;
    border: none;
    border-radius: 0.375rem 0 0 0.375rem;
    display: flex;
    align-items: center;
    padding: 0.75rem;
  }

  .form-control {
    border-left: none;
    border-radius: 0 0.375rem 0.375rem 0;
    box-shadow: none;
