<%- include('navbar') %>

  <div class="bg-light py-3 py-md-5">
    <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
          <div class="bg-white p-4 p-md-5 rounded shadow-sm elegant-card">
            <div class="row gy-3 mb-5">
              <div class="col-12">
                <div class="text-center">
                  <a href="#!">
                    <img src="../../images/iconaura.png" loading="lazy" alt="Aura Candle Studio" width="175" height="57">
                  </a>
                </div>
              </div>
              <div class="col-12">
                <h2 class="fs-6 fw-normal text-center text-secondary m-0 px-md-5">Provide the email address associated
                  with your account to recover your password.</h2>
              </div>
            </div>
            <form action="/forgot-password" method="post" name="passwordForm" id="password-email-form">
              <div class="row gy-3 gy-md-4 overflow-hidden">
                <div class="col-12">
                  <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                  <div class="input-group stylish-input-group">
                    <span class="input-group-text">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-envelope" viewBox="0 0 16 16">
                        <path
                          d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z" />
                      </svg>
                    </span>
                    <input type="email" class="form-control" name="email" id="email" required>
                    <label for="" class="text-danger passwordValidate"></label>
                  </div>
                </div>
                <div class="col-12">
                  <div class="d-grid">
                    <button class="btn btn-success btn-lg" type="submit" id="register-btn">Send OTP</button>
                  </div>
                </div>
              </div>
            </form>
            <div class="row">
              <div class="col-12">
                <hr class="mt-5 mb-4 border-secondary-subtle">
                <h6 style="display: flex;justify-content: center;">Or</h6>
                <div class="d-flex gap-4 justify-content-center">
                  <a href="/login" class="link-secondary text-decoration-none">Log In to your Account</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('footer') %>


    <script>

      const email = document.getElementsByName('email')[0]
      const passwordEmailForm = document.getElementById('password-email-form')

      function checkEmail(email) {
        const re = /\S+@\S+\.\s+/;
        return re.test(email)
      }

      passwordEmailForm.addEventListener('submit', (e) => {

        e.preventDefault()
        let validate = true

        document.getElementsByClassName('passwordValidate')[0].innerHTML = ""



        if (checkEmail(email.value) || email.value.trim === '' || email.value.length === 0) {
          validate = false
          document.getElementsByClassName('passwordValidate')[0].innerHTML = "Email must be valid"
        }


        if (validate) {
          passwordEmailForm.submit()
        }
      })


    </script>