<%- include('alert') %>

    <script>
        // Wait for the DOM content to be fully loaded
        document.addEventListener('DOMContentLoaded', function () {
            // Select all elements with class 'nav-link' and data attribute 'data-bs-toggle="collapse"'
            var dropdowns = document.querySelectorAll('.nav-link[data-bs-toggle="collapse"]');

            // Loop through each dropdown element
            dropdowns.forEach(function (dropdown) {
                // Add a click event listener to each dropdown
                dropdown.addEventListener('click', function (e) {
                    // Prevent the default action of the click event
                    e.preventDefault();
                    // Find the chevron icon within the clicked dropdown
                    var chevron = this.querySelector('.fa-chevron-down');
                    // Toggle the chevron icon between down and up states
                    chevron.classList.toggle('fa-chevron-up');
                });
            });
        });
    </script>